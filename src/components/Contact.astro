<section id="contact" class="py-16 sm:py-24 bg-gradient-to-r from-violet-50/50 to-pink-50/50">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-violet-900 sm:text-4xl mb-4">
        Let's Connect
      </h2>
      <p class="text-lg text-slate-600">
        Have a project in mind? I'd love to help you create content that connects.
      </p>
    </div>

    <div class="p-8 rounded-2xl bg-white/80 backdrop-blur-sm border border-violet-100">
      <form class="space-y-6" id="contact-form" 
        action="https://formspree.io/f/mkgnonyw"
        method="POST">
        <!-- Name Field -->
        <div>
          <label for="name" class="block text-sm font-medium text-violet-900 mb-2">
            Name
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-2 rounded-lg border border-violet-200 
                   focus:ring-2 focus:ring-violet-300 focus:border-violet-300 
                   bg-white/80"
          />
        </div>

        <!-- Email Field -->
        <div>
          <label for="email" class="block text-sm font-medium text-violet-900 mb-2">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 rounded-lg border border-violet-200 
                   focus:ring-2 focus:ring-violet-300 focus:border-violet-300 
                   bg-white/80"
          />
        </div>

        <!-- Message Field -->
        <div>
          <label for="message" class="block text-sm font-medium text-violet-900 mb-2">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            class="w-full px-4 py-2 rounded-lg border border-violet-200 
                   focus:ring-2 focus:ring-violet-300 focus:border-violet-300 
                   bg-white/80"
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-3 px-4 bg-gradient-to-r from-violet-200 to-pink-200 
                 hover:from-violet-300 hover:to-pink-300 text-violet-900 
                 rounded-lg transition-all duration-300 font-medium"
        >
          Send Message
        </button>
      </form>

      <!-- Social Links -->
