---
interface Props {
  currentSlug: string;
}

const { currentSlug } = Astro.props;

// Define case study data with correct paths
const caseStudies = {
  'microlearning': {
    title: 'Making Tech Learning Effortless',
    href: '/contentcraft/projects/microlearning'
  },
  'documentation-redesign': {
    title: 'Modernizing Technical Documentation',
    href: '/contentcraft/projects/documentation-redesign'
  },
  'deployment-tool': {
    title: 'Simplifying AI Deployment',
    href: '/contentcraft/projects/deployment-tool'
  }
};

// Find current case study index and get prev/next
const slugs = Object.keys(caseStudies);
const currentIndex = slugs.indexOf(currentSlug);
const prevSlug = slugs[currentIndex - 1] || slugs[slugs.length - 1];
const nextSlug = slugs[currentIndex + 1] || slugs[0];
---

<div class="fixed bottom-0 left-0 right-0 bg-white/80 backdrop-blur-sm border-t border-violet-100 z-10">
 <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20"> {/* Fixed height */}
      {/* Previous Case Study */}
      <a 
        href={caseStudies[prevSlug].href}
        class="group flex items-center gap-2 text-slate-600 hover:text-violet-900 transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        <div>
          <p class="text-sm text-violet-700">Previous</p>
          <p class="font-medium">{caseStudies[prevSlug].title}</p>
        </div>
      </a>

      {/* Next Case Study */}
      <a 
        href={caseStudies[nextSlug].href}
        class="group flex items-center gap-2 text-slate-600 hover:text-violet-900 transition-colors text-right"
      >
        <div>
          <p class="text-sm text-violet-700">Next</p>
          <p class="font-medium">{caseStudies[nextSlug].title}</p>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </a>
    </div>
  </div>
</div>