---
interface Props {
  currentSlug: string;
}

const { currentSlug } = Astro.props;

// Define case study data
const caseStudies = [
  {
    slug: 'microlearning',
    title: 'Microlearning Content Design',
    description: 'Transforming technical documentation into engaging learning experiences'
  },
  {
    slug: 'deployment-tool',
    title: 'Deployment Tool Content Design',
    description: 'Simplifying AI deployment workflows through effective content design'
  },
  {
    slug: 'documentation-redesign',
    title: 'Documentation Redesign',
    description: 'Modernizing technical documentation for enhanced user experience'
  }
];

// Find current case study index
const currentIndex = caseStudies.findIndex(study => study.slug === currentSlug);
const nextStudy = caseStudies[currentIndex + 1] || caseStudies[0];
const prevStudy = caseStudies[currentIndex - 1] || caseStudies[caseStudies.length - 1];
---

<nav class="border-t border-gray-200 mt-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-8 flex items-center justify-between gap-4 flex-wrap">
      <!-- Previous Case Study -->
      <a 
        href={`/contentcraft/projects/${prevStudy.slug}`}
        class="group flex-1 flex items-center text-left space-x-4 p-4 bg-white rounded-lg hover:shadow-md transition-all duration-300 min-w-[240px]"
      >
        <svg 
          class="h-6 w-6 text-gray-400 group-hover:text-blue-600 transition-colors flex-shrink-0" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <div class="min-w-0">
          <div class="text-sm text-gray-500">Previous Case Study</div>
          <div class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors truncate">
            {prevStudy.title}
          </div>
        </div>
      </a>

      <!-- Next Case Study -->
      <a 
        href={`/contentcraft/projects/${nextStudy.slug}`}
        class="group flex-1 flex items-center text-right space-x-4 p-4 bg-white rounded-lg hover:shadow-md transition-all duration-300 min-w-[240px]"
      >
        <div class="min-w-0 flex-1">
          <div class="text-sm text-gray-500">Next Case Study</div>
          <div class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors truncate">
            {nextStudy.title}
          </div>
        </div>
        <svg 
          class="h-6 w-6 text-gray-400 group-hover:text-blue-600 transition-colors flex-shrink-0" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>

    <!-- Back to Projects -->
    <div class="flex justify-center pb-8">
      <a 
        href="/contentcraft/#projects"
        class="inline-flex items-center text-gray-600 hover:text-blue-600 transition-colors"
      >
        <svg 
          class="w-5 h-5 mr-2" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 12H5M12 19l-7-7 7-7" />
        </svg>
        Back to Projects
      </a>
    </div>
  </div>
</nav>