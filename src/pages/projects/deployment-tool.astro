const sectionNavLinks = [
  { label: "Challenge", href: "#challenge" },
  { label: "Strategy", href: "#strategy" },
  { label: "Results", href: "#results" },
  { label: "Insights", href: "#insights" }
];

const projectInfo = {
  client: "AI Infrastructure Team",
  role: "Content Design Lead",
  timeline: "2022-2023",
  focus: "Technical UX Writing"
};

const challenge = {
  title: "The Challenge",
  description: "Simplify complex AI deployment workflows for both technical and non-technical users while maintaining advanced functionality and technical accuracy.",
  painPoints: [
    "Complex deployment processes causing user friction",
    "Technical jargon creating barriers for non-ML engineers",
    "High support ticket volume for basic deployments",
    "Inconsistent documentation across deployment stages"
  ]
};

const strategy = {
  title: "Strategic Approach",
  steps: [
    {
      action: "User Research & Journey Mapping",
      details: "Conducted in-depth interviews with different user personas from ML engineers to DevOps teams, mapping their deployment journeys and pain points"
    },
    {
      action: "Content Architecture Design",
      details: "Developed a progressive disclosure framework that adapts to user expertise levels, creating clear pathways for different deployment scenarios"
    },
    {
      action: "In-Tool Guidance System",
      details: "Implemented contextual help, smart defaults, and interactive tutorials directly within the deployment interface"
    },
    {
      action: "Validation & Iteration",
      details: "Established continuous feedback loops with users, measuring success through deployment completion rates and support ticket reduction"
    }
  ]
};

const implementation = {
  title: "Implementation Details",
  areas: [
    {
      title: "Smart Defaults & Tooltips",
      description: "Implemented intelligent default settings with clear explanations, helping users make informed decisions without deep technical knowledge"
    },
    {
      title: "Interactive Tutorials",
      description: "Created step-by-step tutorials with real-time validation for common deployment scenarios"
    },
    {
      title: "Error Prevention",
      description: "Developed proactive guidance system that flags potential issues before they occur"
    }
  ]
};

const outcomes = [
  {
    metric: "30%",
    label: "Faster Deployments",
    description: "Reduced average deployment time through streamlined guidance"
  },
  {
    metric: "85%",
    label: "User Satisfaction",
    description: "Improvement in user confidence and successful deployments"
  },
  {
    metric: "25%",
    label: "Support Reduction",
    description: "Decrease in support tickets through improved self-service"
  }
];

const insights = [
  "Progressive disclosure is crucial for managing complex technical processes without overwhelming users",
  "Contextual guidance at decision points significantly reduces errors and improves confidence",
  "Cross-functional collaboration between ML engineers and content designers is essential for accurate, user-friendly documentation",
  "Regular user testing with different personas ensures content meets diverse user needs"
];
---

<Layout title={pageTitle}>
  <!-- Progress Bar -->
  <div class="fixed top-16 left-0 right-0 h-1 bg-gray-100 z-40">
    <div class="progress-bar h-full bg-blue-600"></div>
  </div>

  <DeploymentCaseStudy 
    sectionNavLinks={sectionNavLinks}
    projectInfo={projectInfo}
    challenge={challenge}
    strategy={strategy}
    implementation={implementation}
    outcomes={outcomes}
    insights={insights}
    client:load 
  />
  
  <CaseStudyNavigation currentSlug="deployment-tool" />
</Layout>

<style>
  .progress-bar {
    width: 0;
    transition: width 0.2s ease-out;
  }
</style>

<script>
  // Same script as in microlearning case study
  document.addEventListener('DOMContentLoaded', function() {
    const progressBar = document.querySelector('.progress-bar');
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('nav a[href^="#"]');

    // Progress bar functionality
    function updateProgressBar() {
      if (!progressBar) return;
      const winScroll = window.scrollY;
      const height = document.documentElement.scrollHeight - window.innerHeight;
      const scrolled = (winScroll / height) * 100;
      progressBar.style.width = scrolled + '%';
    }

    window.addEventListener('scroll', updateProgressBar);
    window.addEventListener('resize', updateProgressBar);
    
    updateProgressBar();
    
    return () => {
      window.removeEventListener('scroll', updateProgressBar);
      window.removeEventListener('resize', updateProgressBar);
    };
  });
</script>