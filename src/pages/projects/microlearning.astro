---
import Layout from '../../layouts/Layout.astro';
import CaseStudyNavigation from '../../components/CaseStudyNavigation.astro';
import ResponsiveImage from '../components/ResponsiveImage.astro';

const pageTitle = "Microlearning Content Design Case Study";

const metrics = [
  { 
    value: "50%", 
    label: "Learning Time", 
    description: "Reduction in time-to-competency" 
  },
  { 
    value: "85%", 
    label: "Knowledge Retention", 
    description: "Improvement in information retention" 
  },
  { 
    value: "3x", 
    label: "Engagement", 
    description: "Increase in documentation usage" 
  }
];

const challenges = [
  { 
    title: "Information Overload",
    description: "Users struggled with lengthy documentation and complex technical concepts",
    impact: "Low completion rates for technical training"
  },
  { 
    title: "Poor Retention",
    description: "Traditional formats led to low information retention and engagement",
    impact: "Repeated training sessions required"
  },
  { 
    title: "Time Constraints",
    description: "Users needed quick access to relevant information during their workflow",
    impact: "Delayed implementation timelines"
  }
];

const approach = [
  {
    title: "Strategic Analysis",
    items: [
      "Led cross-functional workshops with Engineering, Product, and L&D teams",
      "Conducted ROI analysis to secure executive buy-in and resources",
      "Developed KPI framework aligned with business objectives"
    ]
  },
  {
    title: "Innovation & Design",
    items: [
      "Pioneered adaptive learning paths based on user proficiency",
      "Integrated real-time coding exercises with instant feedback",
      "Created modular content framework for rapid updates"
    ]
  },
  {
    title: "Change Management",
    items: [
      "Implemented phased rollout strategy across global teams",
      "Established content governance board with key stakeholders",
      "Created train-the-trainer program for scale"
    ]
  }
];

const results = [
  { 
    title: "Learning Efficiency",
    metrics: [
      "Reduced module completion time from 30 to 5 minutes",
      "85% increase in first-attempt success rate",
      "50% reduction in support queries"
    ]
  },
  { 
    title: "User Experience",
    metrics: [
      "92% positive feedback from users",
      "3x increase in voluntary documentation access",
      "40% increase in self-service resolution"
    ]
  },
  { 
    title: "Business Impact",
    metrics: [
      "65% faster time-to-market for new features",
      "30% reduction in training costs",
      "25% increase in feature adoption"
    ]
  }
];

const leadership = [
  {
    title: "Strategic Vision",
    description: "Led cross-functional initiative to transform technical documentation into an innovative learning platform"
  },
  {
    title: "Change Management",
    description: "Successfully drove adoption across global teams through structured change management approach"
  },
  {
    title: "Measurable Impact",
    description: "Delivered significant improvements in learning efficiency and user engagement metrics"
  }
];

const tags = ["Learning Design", "Content Strategy", "Technical Documentation", "User Experience", "Strategic Analysis", "Innovation & Design", "Change Management"];
---


<Layout title={pageTitle}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Header -->
    <header class="text-center mb-16">
      <div class="flex flex-wrap gap-2 justify-center mb-6">
        {tags.map((tag) => (
          <span class="px-3 py-1 text-sm font-medium text-blue-600 bg-blue-50 rounded-full">
            {tag}
          </span>
        ))}
      </div>
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Microlearning Documentation System</h1>
      <p class="text-xl text-gray-600">
        Transforming complex technical documentation into engaging, bite-sized learning experiences
      </p>
    </header>

<!-- Top Navigation -->
<nav class="bg-white shadow-sm fixed top-0 left-0 right-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <a href="/contentcraft" class="flex items-center text-gray-900 hover:text-gray-600">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Portfolio
        </a>
      </div>
      <div class="flex items-center">
        <span class="text-sm text-gray-500">Case Study</span>
      </div>
    </div>
  </div>
</nav>

<!-- Executive Summary -->
<section class="mb-16" client:load>
  <div class="p-8 bg-gradient-to-r from-blue-50 to-white rounded-xl">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Executive Summary</h2>
    <p class="text-gray-700 text-lg leading-relaxed mb-8">Led the transformation of traditional technical documentation into an innovative microlearning system, significantly improving user engagement, knowledge retention, and implementation success rates.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {metrics.map((metric) => {
        return (
          <div class="text-center p-6 bg-white rounded-lg shadow-sm">
            <div class="text-3xl font-bold text-blue-600 mb-2">{metric.value}</div>
            <div class="font-medium text-gray-900 mb-1">{metric.label}</div>
            <div class="text-sm text-gray-600">{metric.description}</div>
          </div>
        );
      })}
    </div>
  </div>
</section>

<!-- Visual Transformation -->
<section class="mb-16">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Visual Transformation</h2>
  
  <!-- Documentation Evolution -->
  <div class="mb-12">
    <h3 class="text-xl font-medium text-gray-900 mb-4">Documentation Evolution</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-8">
      <div class="bg-white rounded-lg shadow-sm p-4 md:p-6">
        <h4 class="font-medium text-gray-900 mb-3">Before: Traditional Documentation</h4>
        <div class="relative aspect-video mb-4">
          <img 
            src="/contentcraft/projects/case-studies/microlearning/before-learning.webp"
            alt="Traditional documentation showing lengthy pages of text"
            class="absolute inset-0 w-full h-full object-cover rounded-lg cursor-pointer hover:opacity-95 transition-opacity"
            loading="lazy"
            onClick="openModal(this.src, this.alt)"
          />
        </div>
        <ul class="space-y-2 text-red-700 text-sm md:text-base">
          <li class="flex items-start">
            <svg class="w-5 h-5 mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span>Lengthy documentation</span>
          </li>
          <li class="flex items-start">
            <svg class="w-5 h-5 mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span>Information overload</span>
          </li>
        </ul>
      </div>
      
      <!-- Similar structure for other images -->
      <div class="bg-white rounded-lg shadow-sm p-4 md:p-6">
        <h4 class="font-medium text-gray-900 mb-3">After: Microlearning Modules</h4>
        <div class="relative aspect-video mb-4">
          <img 
            src="/contentcraft/projects/case-studies/microlearning/after-learning.webp"
            alt="New microlearning interface with bite-sized content"
            class="absolute inset-0 w-full h-full object-cover rounded-lg cursor-pointer hover:opacity-95 transition-opacity"
            loading="lazy"
            onClick="openModal(this.src, this.alt)"
          />
        </div>
        <ul class="space-y-2 text-green-700 text-sm md:text-base">
          <li class="flex items-start">
            <svg class="w-5 h-5 mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Bite-sized modules</span>
          </li>
          <li class="flex items-start">
            <svg class="w-5 h-5 mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Interactive learning</span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Add modal for image preview -->
  <div id="imageModal" class="fixed inset-0 bg-black bg-opacity-80 z-50 hidden flex items-center justify-center p-4">
    <div class="max-w-7xl w-full relative">
      <button 
        onclick="closeModal()" 
        class="absolute top-4 right-4 text-white hover:text-gray-300"
        aria-label="Close modal"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <img id="modalImage" src="" alt="" class="max-h-[90vh] max-w-full mx-auto object-contain" />
      <p id="modalCaption" class="text-white text-center mt-4"></p>
    </div>
  </div>

  <script>
    function openModal(src, alt) {
      const modal = document.getElementById('imageModal');
      const modalImg = document.getElementById('modalImage');
      const modalCaption = document.getElementById('modalCaption');
      
      modal.classList.remove('hidden');
      modalImg.src = src;
      modalImg.alt = alt;
      modalCaption.textContent = alt;
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      const modal = document.getElementById('imageModal');
      modal.classList.add('hidden');
      document.body.style.overflow = 'auto';
    }

    // Close modal when clicking outside the image
    document.getElementById('imageModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeModal();
      }
    });

    // Close modal with escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeModal();
      }
    });
  </script>
</section>

    <!-- Strategic Challenge -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Strategic Challenge & Context</h2>
      <div class="grid gap-6">
        {challenges.map((challenge) => (
          <div class="p-6 bg-white rounded-lg shadow-sm border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{challenge.title}</h3>
            <p class="text-gray-600 mb-4">{challenge.description}</p>
            <div class="text-sm font-medium text-red-600">Impact: {challenge.impact}</div>
          </div>
        ))}
      </div>
    </section>

    <!-- Leadership & Approach -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Leadership & Strategic Approach</h2>
      <div class="grid gap-8 md:grid-cols-3">
        {approach.map((phase) => (
          <div class="p-6 bg-white rounded-lg shadow-sm border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{phase.title}</h3>
            <ul class="space-y-3">
              {phase.items.map((item) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- Business Impact -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Value Creation & Impact</h2>
      <div class="grid gap-6 md:grid-cols-3">
        {results.map((result) => (
          <div class="p-6 bg-white rounded-lg shadow-sm border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{result.title}</h3>
            <ul class="space-y-3">
              {result.metrics.map((metric) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-600 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600">{metric}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- Leadership Highlights -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Leadership Highlights</h2>
      <div class="grid gap-6 md:grid-cols-3">
        {leadership.map((highlight) => (
          <div class="p-6 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{highlight.title}</h3>
            <p class="text-gray-700">{highlight.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Key Insights -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Strategic Insights</h2>
      <div class="p-6 bg-white rounded-lg shadow-sm border border-gray-100">
        <ul class="space-y-4">
          <li class="flex items-start">
            <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600">Data-driven approach to content strategy enables precise measurement of business impact and ROI</span>
          </li>
          <li class="flex items-start">
            <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600">Cross-functional collaboration and stakeholder management are critical for enterprise-wide adoption</span>
          </li>
          <li class="flex items-start">
            <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600">Scalable content systems require robust governance and continuous improvement frameworks</span>
          </li>
        </ul>
      </div>
    </section>
  </article>
  <CaseStudyNavigation currentSlug="microlearning" />
</Layout>

<style>
  .from-blue-50 { background-color: #eff6ff; }
  .to-indigo-50 { background-color: #eef2ff; }
  .text-blue-600 { color: #2563eb; }
  .bg-blue-50 { background-color: #eff6ff; }
  .text-green-600 { color: #059669; }
  .text-gray-600 { color: #4b5563; }
  .text-gray-700 { color: #374151; }
  .text-gray-900 { color: #111827; }
  .text-red-600 { color: #dc2626; }
</style>