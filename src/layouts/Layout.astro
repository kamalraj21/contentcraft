---
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import Header from '../components/Header.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPage = Astro.url.pathname;

const navigation = [
  { name: 'Projects', href: '/contentcraft/projects', match: '/projects' },
  { name: 'About', href: '/contentcraft/about', match: '/about' },
  { name: 'Contact', href: '/contentcraft/contact', match: '/contact' }
];
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Kamal Raj</title>
    <!-- Add other meta tags and links -->
  </head>
  <body class="bg-gray-50">
    <Header currentPage={currentPage} />
    <main class="pt-16">
      <!-- Add top spacing to account for fixed header -->
      <slot />
    </main>
  </body>
</html>

<style is:global>
  /* Add any global styles */
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
</style>
